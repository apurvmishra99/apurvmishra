<form action="/.netlify/functions/share" accept-charset="UTF-8" method="POST">
    <fieldset>
        <legend>Link Info</legend>
        <ul class="fields">
            <li>
                <label for="sharing-title">Title</label>
                <input type="text" id="sharing-title" name="title">
            </li>
            <li>
                <label for="sharing-url">URL</label>
                <input type="url" id="sharing-url" name="url" required>
            </li>
            <li>
                <label for="sharing-via">via</label>
                <input type="text" id="sharing-via" name="via">
            </li>
            <li>
                <label for="sharing-body">Note Body (without link)</label>
                <textarea id="sharing-body" maxlength="200" name="body"></textarea>
            </li>
            <li>
                <label for="sharing-syndicate">
                    <input type="checkbox" id="sharing-syndicate" name="syndicate" value="1" />
                    Syndicate to Twitter
                </label>
            </li>
        </ul>
    </fieldset>
    <details>
        <summary>Config</summary>
        <ul class="fields">
            <li>
                <label for="sharing-username">Username</label>
                <input id="sharing-username" name="username" required>
            </li>
            <li>
                <label for="sharing-token">Token</label>
                <input type="password" id="sharing-token" name="token" required>
            </li>
        </ul>
    </details>
    <div>
        <button type="submit">Publish</button>
    </div>
</form>